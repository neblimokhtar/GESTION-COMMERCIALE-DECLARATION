<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>
            SOCIETE</h2>
        <ol class="breadcrumb">
            <li><a>Paramètrage</a> </li>
            <li class="active"><strong>SOCIETE</strong> </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    @using (Html.BeginForm("Societe", "Parametrage", new {}, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="row">
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    Informations Générales</label>
                <div class="col-sm-10">
                    <input type="text" placeholder="Nom" class="form-control m-b" name="Nom" required value="@Model.NOM">
                    <textarea placeholder="Adresse" class="form-control m-b" name="Adresse" rows="2"
                        cols="2">@Model.ADRESSE</textarea>
                    <input type="tel" placeholder="Telephone" class="form-control m-b" name="Telephone" value="@Model.TELEPHONE">
                    <input type="tel" placeholder="Fax" class="form-control m-b" name="Fax" value="@Model.FAX">
                    <input type="email" placeholder="Email" class="form-control m-b" name="Email" value="@Model.EMAIL">
                    <input type="text" placeholder="Site Web" class="form-control m-b" name="SiteWeb" value="@Model.SITE_WEB">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    Informations Fiscales</label>
                <div class="col-sm-10">
                    <input type="text" placeholder="ID Fiscal" class="form-control m-b" name="IdFiscal" value="@Model.ID_FISCALE">
                    <input type="text" placeholder="AI" class="form-control m-b" name="AI" value="@Model.AI">
                    <input type="text" placeholder="NIS" class="form-control m-b" name="NIS" value="@Model.NIS">
                    <input type="text" placeholder="RC" class="form-control m-b" name="RC" value="@Model.RC">
                    <input type="text" placeholder="RIB" class="form-control m-b" name="RIB" value="@Model.RIB">
                </div>
            </div>
        </div>
        <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit">
            <strong>Enregistrer</strong></button>
    }
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#Li-Parametrage").attr("class", "active");
        $("#ul-Parametrage").attr("class", "nav nav-second-level collapse in");
        $("#ul-Parametrage").attr("aria-expanded", "true");
        var Action = "@ViewBag.Action";
        if (Action == "Edition") {
            setTimeout(function () {
                toastr.options = {
                    closeButton: true,
                    progressBar: true,
                    showMethod: 'slideDown',
                    timeOut: 4000
                };
                toastr.success('Modification Avec Succés', '');

            }, 1300);
        }
    });
</script>
