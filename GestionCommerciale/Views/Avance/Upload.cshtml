
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>DEMANDES D'AVANCE</h2>
        <ol class="breadcrumb">
            <li><a>AVANCE</a> </li>
            <li class="active"><strong>CHARGER FICHIER</strong> </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    @using (Html.BeginForm("SendFile", "Avance", new { Mode = ViewBag.Mode, Code = ViewBag.Code }, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <label class="col-lg-4 control-label" style="padding-left: 0px; text-align: initial;">
                        FICHIER EXCEL</label>
                    <div class="col-lg-8">
                    <input type="file" name="FILE" class="form-control" />
                    </div>
                </div>
            </div>
            
        </div>
        <div class="row pull-right" style="margin-right: 15px; margin-top: 15px;">
            <button type="button" class="btn btn-w-m btn-success" id="Valider"><i class="fa fa-check-square-o" aria-hidden="true"></i>Valider</button>
        </div>
    }
</div>
<script type="text/javascript">
    $("#Valider").click(function () {
        var r = confirm("Voulez vous vraiment valider cette action ?");
        if (r == true) {
            $("form").submit();
        }
    });
</script>
