<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>LISTE DES AVANCES</h2>
        <ol class="breadcrumb">
            <li><a>AVANCES</a> </li>
            <li class="active"><strong>LISTE DES AVANCES / UTILISATEURS</strong> </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title" style="margin-bottom: 10px; padding-top: 6px;">
                    <div class="col-lg-3">
                        <div class="col-md-4">
                            <h5>EMPLOYEE</h5>
                        </div>
                        <div class="col-md-8">
                            <select class="form-control" name="employee" id="employee">
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="col-md-4"><span>DU</span></div>
                        <div class="col-md-8">
                            <input type="text" class="form-control" id="START" />
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="col-md-4"><span>AU</span></div>
                        <div class="col-md-8">
                            <input type="text" class="form-control" id="END" />
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="col-md-6">
                            <button class="btn btn-success " type="button" id="FilterBtn">
                                <i class="fa fa-search" aria-hidden="true"></i>&nbsp;&nbsp;<span class="bold">Filtrer</span></button>
                        </div>
                        <div class="col-md-6">
                            <button class="btn btn-primary " type="button" id="PrintBtn">
                                <i class="fa fa-print" aria-hidden="true"></i>&nbsp;&nbsp;<span class="bold">Imprimer</span></button>
                        </div>
                    </div>
                </div>
                <div class="ibox-content" id="Content">
                    <div class="row">
                        <span class="badge badge-info" style="float: right; margin-right: 15px; margin-bottom: 15px;">
                            <h1 id="TOTAL">0,000</h1>
                        </span>

                    </div>
                    <table class="table table-striped table-bordered table-hover dataTables-example"
                        id="Tableau">
                        <thead>
                            <tr>
                                <th>MATRICULE
                                </th>
                                <th>NOM PRENOM
                                </th>
                                <th>MONTANT
                                </th>
                                <th>DATE
                                </th>
                                <th>TYPE
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                        <tfoot>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<ul class='custom-menu'>
    <li data-action="Delete"><i class="fa fa-trash" style="margin-right: 3px;"></i>
        Supprimer</li>
    <li data-action="Edit"><i class="fa fa-pencil-square-o" style="margin-right: 3px;"></i>
        Modifier</li>
</ul>
<script src="~/js/bootstrap-datepicker.min.js" type="text/javascript"></script>
<script src="~/js/select2.min.js" type="text/javascript"></script>
<script type="text/javascript" src="~/js/plugins/dataTables/jquery.dataTables.js"></script>
<script type="text/javascript" src="~/js/plugins/dataTables/dataTables.bootstrap.js"></script>
<script type="text/javascript" src="~/js/plugins/dataTables/dataTables.responsive.js"></script>
<script type="text/javascript" src="~/js/plugins/dataTables/dataTables.tableTools.min.js"></script>
<script type="text/javascript">
    var table = $('#Tableau').DataTable();

    $("#PrintBtn").click(function () {
        var EMPLOYEE = $("#employee").val();
        var START = $("#START").val();
        var END = $("#END").val();
        window.open('/Avance/PrintFilter?CODE=' + EMPLOYEE + '&START=' + START + '&END=' + END, '_blank');
    });
    $(document).ready(function () {
        $("#START").datepicker({
            format: 'dd/mm/yyyy'
        });
        $("#END").datepicker({
            format: 'dd/mm/yyyy'
        });
        $("#employee").select2();
        var table = $('#Tableau').DataTable();
        $.ajax({
            type: 'POST',
            url: "/Avance/GetAllEmployee",
            success: function (response) {
                $.each(response, function (i, item) {
                    $('#employee').append($('<option>', {
                        value: item.ID,
                        text: item.FULLNAME
                    }));
                });
            }
        });
        $('#employee').append($('<option>', {
            value: "",
            text: "TOUT"
        }));
    });
    $(document).on("click", "#FilterBtn", function (e) {
        var EMPLOYEE = $("#employee").val();
        var START = $("#START").val();
        var END = $("#END").val();
        $.get('@Url.Action("Filtrer", "Avance")?CODE=' + EMPLOYEE + '&START=' + START + '&END=' + END, function (data) {
            $('#Content').html(data);
        });
    });
    $(document).on('keydown', function (e) {
        if (e.which == 13) {
            e.preventDefault();
            var EMPLOYEE = $("#employee").val();
            var START = $("#START").val();
            var END = $("#END").val();
            $.get('@Url.Action("Filtrer", "Avance")?CODE=' + EMPLOYEE + '&START=' + START + '&END=' + END, function (data) {
                $('#Content').html(data);
            });
        }
    });
</script>
