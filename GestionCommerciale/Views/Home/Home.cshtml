<div class="row  border-bottom white-bg dashboard-header">
    <div class="col-lg-12">
        <div class="ibox-content">
            <h2>NOTIFICATIONS</h2>
            <ul class="todo-list m-t ui-sortable">
                @foreach (var item in Model)
                {
                    if (item.ETIQUETTE == "A") 
                    {
                    <li>
                        <div class="icheckbox_square-green" style="position: relative;">
                            <input type="checkbox" value="" name="" class="i-checks" style="position: absolute; opacity: 0;">
                            <ins class="iCheck-helper" style="position: absolute; top: 0%; left: 0%; display: block; width: 100%; height: 100%; margin: 0px; padding: 0px; border: 0px; opacity: 0; background: rgb(255, 255, 255);"></ins>
                        </div>
                        <small class="label label-info">@item.TYPE</small><span class="m-l-xs">@item.DESCRIPTION pour la société: @item.SOCIETE</span> <small class="label label-success">NOUVEAU</small> </li>
                    }
                    if (item.ETIQUETTE == "B")
                    {
                    <li>
                        <div class="icheckbox_square-green" style="position: relative;">
                            <input type="checkbox" value="" name="" class="i-checks" style="position: absolute; opacity: 0;">
                            <ins class="iCheck-helper" style="position: absolute; top: 0%; left: 0%; display: block; width: 100%; height: 100%; margin: 0px; padding: 0px; border: 0px; opacity: 0; background: rgb(255, 255, 255);"></ins>
                        </div>
                        <small class="label label-info">@item.TYPE</small><span class="m-l-xs">@item.DESCRIPTION pour la société: @item.SOCIETE</span> <small class="label label-warning">IL EST TEMPS</small> </li>
                    }
                    if (item.ETIQUETTE == "C")
                    {
                    <li>
                        <div class="icheckbox_square-green" style="position: relative;">
                            <input type="checkbox" value="" name="" class="i-checks" style="position: absolute; opacity: 0;">
                            <ins class="iCheck-helper" style="position: absolute; top: 0%; left: 0%; display: block; width: 100%; height: 100%; margin: 0px; padding: 0px; border: 0px; opacity: 0; background: rgb(255, 255, 255);"></ins>
                        </div>
                        <small class="label label-info">@item.TYPE</small><span class="m-l-xs">@item.DESCRIPTION pour la société: @item.SOCIETE</span> <small class="label label-danger">URGENT</small> </li>
                    }
                }
            </ul>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        //
        var Login = "@ViewBag.Login";
        if (Login != "") {
            setTimeout(function () {
                toastr.options = {
                    closeButton: true,
                    progressBar: true,
                    showMethod: 'slideDown',
                    timeOut: 4000
                };
                toastr.success('Bienvenue ' + Login, '');

            }, 1300);
        }
        //
    });
</script>
