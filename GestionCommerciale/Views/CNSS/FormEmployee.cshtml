<link href="~/css/switchery.css" rel="stylesheet" />
<link href="~/css/bootstrap-datepicker3.min.css" rel="stylesheet" type="text/css" />

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>EMPLOYEES</h2>
        <ol class="breadcrumb">
            <li><a>CNSS</a> </li>
            <li class="active"><strong>@ViewBag.Type</strong> </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    @using (Html.BeginForm("SendFormEmployee", "CNSS", new { Mode = ViewBag.Mode, Code = ViewBag.Code, Filter = ViewBag.Societe }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {

        <div class="row">
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    SOCIETE</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control m-b" name="SOCIETE" value="@ViewBag.SOCIETE_NAME" readonly >
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    CIN</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control m-b" name="CIN"  value="@Model.CIN" id="CIN">
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    NOM & PRENOM</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control m-b" name="FULLNAME"  value="@Model.FULLNAME" id="FULLNAME">
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    NUMERO ASSURANCE SOCIAL</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control m-b" name="NUM_ASS_SOC"  value="@Model.NUM_ASS_SOC" id="NUM_ASS_SOC">
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    QUALIFICATION</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control m-b" name="QUALIFICATION"  value="@Model.QUALIFICATION" id="QUALIFICATION" required>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    SALAIRE</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control m-b" name="SALAIRE"  value="@Model.SALAIRE.ToString().Replace(',','.')" id="SALAIRE" required>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label">
                DATE DEMARRAGE</label>
            <div class="col-lg-10">
                <div class="input-group date">
                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                    <input type="text" class="form-control" name="DATE" id="DATE" required value="@ViewBag.date">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    CIVILITE</label>
                <div class="col-sm-10">
                    <select name="CIVILITE" class="form-control">
                        <option value="Monsieur">Monsieur</option>
                        <option value="Madame">Madame</option>
                        <option value="Mademoiselle">Mademoiselle</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    NUMERO (SOCIETE)</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control m-b" name="NUMERO"  value="@Model.NUMERO" id="NUMERO">
                </div>
            </div>
        </div>


        <div class="row">
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    ACTIF</label>
                <div class="col-sm-10">
                    <input type="checkbox" class="js-switch" checked="@(Model.ACTIF)" name="ACTIF" value="@(Model.ACTIF)"/>
                </div>
            </div>
        </div>

        <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit">
            <strong>Enregistrer</strong></button>
    }
</div>
<script src="~/js/bootstrap-datepicker.min.js" type="text/javascript"></script>

<script src="~/js/jquery.maskedinput.min.js"></script>
<script src="~/js/switchery.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#NUM_ASS_SOC").mask("99999999-99");
        var elem = document.querySelector('.js-switch');
        var switchery = new Switchery(elem, { color: '#1AB394' });
        $("#DATE").datepicker({
            format: 'dd/mm/yyyy'
        });
    });
    $('form').validate({
        rules: {
            CIN: {
                required: true,
                minlength: 8,
                maxlength: 8
            },
            FULLNAME: {
                required: true
            },
            NUM_ASS_SOC: {
                required: true,
                minlength: 11,
                maxlength: 11
            }
        }
    });
</script>
