<link href="~/css/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet">
<link href="~/css/plugins/dataTables/dataTables.responsive.css" rel="stylesheet">
<link href="~/css/plugins/dataTables/dataTables.tableTools.min.css" rel="stylesheet">
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>DETAIL DU DECLARATION</h2>
        <ol class="breadcrumb">
            <li><a>CNSS</a> </li>
            <li class="active"><strong>@ViewBag.DECLARATION / Trimestre : @ViewBag.TRIMESTRE/ Année : @ViewBag.ANNEE</strong> </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title" style="padding-top: 4px;">
                    <h5 style="padding-top: 10px;">Lignes de la déclaration</h5>
                    <div class="ibox-tools">
                        <button class="btn btn-primary " type="button" id="PrintBtn">
                            <i class="fa fa-print" aria-hidden="true"></i>&nbsp;&nbsp;<span class="bold">Imprimer</span></button>
                    </div>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-bordered table-hover dataTables-example"
                        id="Tableau">
                        <thead>
                            <tr>
                                <th>MATRICULE DE L'ASSUREE
                                </th>
                                <th>IDENTITE DU SALARIE
                                </th>
                                <th>1ER MOIS
                                </th>
                                <th>2EME MOIS
                                </th>
                                <th>3EME MOIS
                                </th>
                                <th>TOTAL
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (dynamic item in Model)
                            {
                                <tr id="@item.ID">
                                    <td>
                                        @item.EMPLOYEES.NUM_ASS_SOC
                                    </td>
                                    <td>
                                        @item.EMPLOYEES.FULLNAME
                                    </td>
                                    <td>
                                        @item.SALAIRE_MOIS_1
                                    </td>
                                    <td>
                                        @item.SALAIRE_MOIS_2
                                    </td>
                                    <td>
                                        @item.SALAIRE_MOIS_3
                                    </td>
                                    <td>
                                        @(item.SALAIRE_MOIS_1+item.SALAIRE_MOIS_2+item.SALAIRE_MOIS_3)
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/js/plugins/dataTables/jquery.dataTables.js"></script>
<script type="text/javascript" src="~/js/plugins/dataTables/dataTables.bootstrap.js"></script>
<script type="text/javascript" src="~/js/plugins/dataTables/dataTables.responsive.js"></script>
<script type="text/javascript" src="~/js/plugins/dataTables/dataTables.tableTools.min.js"></script>
<script type="text/javascript">
    var table = $('#Tableau').DataTable();
    $("#PrintBtn").click(function () {
        var CODE = "@ViewBag.CODE";
        window.open("/CNSS/PrintDeclarationDetail?CODE="+CODE, '_blank');
    });
</script>
