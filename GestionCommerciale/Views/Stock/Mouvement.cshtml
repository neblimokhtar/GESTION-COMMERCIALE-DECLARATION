<link href="~/css/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet">
<link href="~/css/plugins/dataTables/dataTables.responsive.css" rel="stylesheet">
<link href="~/css/plugins/dataTables/dataTables.tableTools.min.css" rel="stylesheet">
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>
            MOUVEMENTS PRODUITS</h2>
        <ol class="breadcrumb">
            <li><a>Mouvements du produit</a> </li>
            <li><a>@ViewBag.LibProduit</a> </li>
            <li class="active"><strong>@ViewBag.CodeProduit</strong> </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title" style="padding-top: 4px;">
                    <h5 style="padding-top: 10px;">
                        Mouvements du produit</h5>
                    <div class="ibox-tools">
                        <button class="btn btn-primary " type="button" id="PrintBtn">
                            <i class="fa fa-print" aria-hidden="true"></i>&nbsp;&nbsp;<span class="bold">Imprimer</span></button>
                    </div>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-bordered table-hover dataTables-example"
                        id="Tableau">
                        <thead>
                            <tr>
                                <th>
                                    DATE
                                </th>
                                <th>
                                    TYPE MOUVEMENT
                                </th>
                                <th>
                                    CODE MOUVEMENT
                                </th>
                                <th>
                                    QUANTITE MOUVEMENT
                                </th>
                                <th>
                                    QUANTITE AVANT
                                </th>
                                <th>
                                    QUANTITE APRES
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="@item.ID">
                                    <td>
                                        @item.DATE_MOUVEMENT.ToShortDateString()
                                    </td>
                                    <td>
                                        @item.TYPE_MOUVEMENT
                                    </td>
                                    <td>
                                        @item.CODE_MOUVEMENT
                                    </td>
                                    <td>
                                        @item.QUANTITE_MOUVEMENT
                                    </td>
                                    <td>
                                        @item.QUANTITE_AVANT_MOUVEMENT
                                    </td>
                                    <td>
                                        @item.QUANTITE_APRES_MOUVEMENT
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/js/plugins/dataTables/jquery.dataTables.js"></script>
<script type="text/javascript" src="~/js/plugins/dataTables/dataTables.bootstrap.js"></script>
<script type="text/javascript" src="~/js/plugins/dataTables/dataTables.responsive.js"></script>
<script type="text/javascript" src="~/js/plugins/dataTables/dataTables.tableTools.min.js"></script>
<script type="text/javascript">
    $("#PrintBtn").click(function () {
        var CODE = "@ViewBag.CODE";
        window.open("/Stock/PrintAllMouvementProduit?CODE=" + CODE, '_blank');
    });
</script>
