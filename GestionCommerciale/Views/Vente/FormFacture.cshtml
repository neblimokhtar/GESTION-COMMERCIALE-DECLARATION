        var parampassed = "@ViewBag.Code";
        var Conf = confirm("Voulez vous transformer cette facture en avoir ?");
        if (Conf == true) {
            $.ajax({
                type: 'POST',
                url: "/Vente/FactureVersAvoir?parampassed=" + parampassed,
                success: function (response) {
                    if (response == "NO") {
                        window.location.href = window.location.href;
