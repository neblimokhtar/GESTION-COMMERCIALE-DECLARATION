                $.each(response, function (i, item) {
                    $('#client').append($('<option>', {
                        value: item.ID,
                        text: item.NOM
                    }));
                    if (Mode == "Edit") {
                        $("#client").val(client).trigger("change");
                    }
                });
            }
        });
        if (Mode == "Create") {
            $("#DeleteBtn").attr("disabled", true);
        }
